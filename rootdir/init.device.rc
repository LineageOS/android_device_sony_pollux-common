on boot
    # Owner for the light sensor
    chown system system /sys/devices/i2c-0/0-0036/als_enable
    chown system system /sys/devices/i2c-0/0-0036/als_result

    # Panel backlight
    chown system system /sys/devices/i2c-0/0-002c/backlight/lcd-backlight/brightness
    chmod 660 /sys/devices/i2c-0/0-002c/backlight/lcd-backlight/brightness
